Mini Projects:
1) Anagram Checker

class AnagramChecker:
    def __init__(self, word_list_file='sowpods.txt'):
        self.words = self.load_word_list(word_list_file)

    def load_word_list(self, file_path):
        with open(file_path, 'r') as file:
            word_list = [word.strip().lower() for word in file.readlines()]
        return word_list

    def is_valid_word(self, word):
        if word.lower() in self.words:
            return True
        else:
            return False

    def is_anagram(self, word1, word2):
        word1, word2 = word1.lower(), word2.lower()
        return sorted(word1) == sorted(word2) and word1 != word2

    def get_anagrams(self, word):
        anagrams = []
        for w in self.words:
            if self.is_anagram(word, w):
                anagrams.append(w)
        return anagrams

    def get_word_frequency(self, word):
        from collections import Counter
        return dict(Counter(word.lower()))
        return anagrams


